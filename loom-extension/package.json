{
  "name": "loom-extension",
  "displayName": "Yarn Loom",
  "description": "Adds support for the Yarn Spinner dialogue language.",
  "version": "1.2.0",
  "homepage": "https://yarnspinner.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/TranquilMarmot/YarnLoom"
  },
  "license": "MIT",
  "keywords": [
    "yarn spinner",
    "yarnspinner",
    "yarn",
    "game writing",
    "narrative",
    "tree",
    "branch",
    "branching",
    "dialog",
    "dialogue"
  ],
  "qna": false,
  "publisher": "TranquilMarmot",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#C5E29B",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCustomEditor:yarnLoom.editor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "yarnLoom.editor",
        "displayName": "Yarn Loom",
        "selector": [
          {
            "filenamePattern": "*.yarn"
          },
          {
            "filenamePattern": "*.yarn.txt"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run loom:build",
    "build": "rm -rf out && npm run compile && cd ../loom-editor && cp -r ./build ../loom-extension/out",
    "compile": "tsc -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts ./",
    "watch": "tsc -watch -p ./",
    "test": "jest"
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "sanitize-filename": "^1.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
